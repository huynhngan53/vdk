<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/backgroudtren"
                    android:id="@+id/nentren">
        <ImageView android:layout_width="150dp"
                   android:id="@+id/logo"
                   android:layout_height="150dp"
                   android:src="@drawable/xewifi1"
                   android:background="@android:color/transparent"
                   android:layout_centerHorizontal="true"
                   android:layout_marginTop="50dp"></ImageView>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/icon"
                      android:orientation="vertical"
                      android:layout_marginTop="10dp"

                      android:layout_below="@id/logo">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:weightSum="3">
                <RelativeLayout android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                    <ImageView android:layout_width="16dp"
                               android:id="@+id/nuttron"
                               android:layout_centerHorizontal="true"
                               android:layout_height="16dp"
                               android:background="@drawable/nuttron"></ImageView>
                </RelativeLayout>
                <RelativeLayout android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                    <TextView android:layout_width="wrap_content"
                              android:id="@+id/httocdo"
                              android:textColor="@color/chutrang"
                              android:textStyle="bold"
                              android:layout_centerHorizontal="true"
                              android:layout_height="wrap_content"
                              android:text="40"></TextView>


                </RelativeLayout>
                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:id="@+id/htpin"
                              android:layout_centerHorizontal="true"
                              android:textStyle="bold"
                              android:textColor="@color/chutrang"
                              android:hint="70"></TextView>

                </RelativeLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:weightSum="3">
                <RelativeLayout android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_centerHorizontal="true"
                              android:text="@string/wifi"
                              android:textColor="@color/chutrang"
                              android:textSize="15sp"
                              android:layout_marginTop="10dp"></TextView>
                </RelativeLayout>
                <RelativeLayout android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/tocdo"
                              android:layout_centerHorizontal="true"
                              android:textColor="@color/chutrang"
                    ></TextView>

                </RelativeLayout>
                <RelativeLayout android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                    <TextView android:layout_width="wrap_content"
                              android:text="@string/pin"
                              android:layout_centerHorizontal="true"
                              android:textColor="@color/chutrang"
                              android:layout_height="wrap_content"></TextView>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
    <Button android:layout_width="85dp"
            android:layout_below="@id/nentren"
            android:layout_height="85dp"
            android:background="@drawable/nut"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/tren"></Button>
    <Button android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/trai"
            android:gravity="left"
            android:layout_toLeftOf="@id/tren"
            android:layout_below="@id/tren"
            android:id="@+id/trai"></Button>


    <Button android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/phaii"
            android:layout_toRightOf="@id/tren"
            android:layout_below="@id/tren"
            android:id="@+id/phai" android:layout_marginTop="3dp"></Button>

    <Button android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@drawable/duoi"
            android:gravity="left"
            android:layout_below="@id/trai"
            android:layout_centerHorizontal="true"
            android:id="@+id/duoi"></Button>


</RelativeLayout>